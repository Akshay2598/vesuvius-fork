<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <global-exceptions>
        <exception type="java.lang.Exception"
            key="org.sahana.text.error.blank"
            path="/Error.jsp"
            scope="request"/>
    </global-exceptions>

    <global-forwards>
        <forward name="DamagedReportBasic" path="/DamagedReportBasic.jsp"/>
        <forward name="DAMAGE_DETAIL_HOSPITAL" path="/DamagedReportHospital.jsp"/>
        <forward name="error" path="/Error.jsp"/>
    </global-forwards>

    <action-mappings>

        <action name="damagedCaseInitAction"
            path="/damagedCaseInitAction"
            type="org.damage.action.SystemInitAction"
            validate="false">
            <forward name="success" path="/DamagedCase.jsp"/>
        </action>

        <action name="damagedCaseAction"
            path="/damagedCaseAction"
            type="org.damage.action.DamagedCaseInitAction"
            validate="false">
        </action>

        <action name="damagedDetailEditAction"
            path="/damagedDetailEditAction"
            type="org.damage.action.DamagedDetailModifyAction"
            parameter="edit"
            validate="false">
        </action>

        <action name="damagedDetailRemoveAction"
            path="/damagedDetailRemoveAction"
            type="org.damage.action.DamagedDetailModifyAction"
            parameter="remove"
            validate="false">
            <forward name="success" path="/DamagedCase.jsp"/>
        </action>

        <action name="damagedDetailCancelAction"
            path="/damagedDetailCancelAction"
            type="org.damage.action.DamagedDetailModifyAction"
            parameter="cancel"
            validate="false">
            <forward name="success" path="/DamagedCase.jsp"/>
        </action>

        <action name="damagedDetailUpdateAction"
            path="/damagedDetailUpdateAction"
            type="org.damage.action.DamagedDetailUpdateAction"
            validate="false">
            <forward name="success" path="/DamagedCase.jsp"/>
        </action>

        <action name="damagedCaseUpdateAction"
            path="/damagedCaseUpdateAction"
            type="org.damage.action.DamagedCaseUpdateAction"
            validate="false">
            <forward name="success" path="/DamagedCase.jsp"/>
        </action>

    </action-mappings>

</struts-config>
