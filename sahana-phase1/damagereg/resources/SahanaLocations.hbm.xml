<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class name="org.damage.business.SahanaLocation" table="sahana_locations">
    <id name="id" column="id" type="long" unsaved-value="null">
      <generator class="increment"/>
    </id>
    <property name="name" column="name" type="string" length="63" />
	<property name="code" column="code" type="string" length="31" />
	<property name="parent" column="parent" type="long"/>
    <property name="locationType" column="location_type" type="long"/>
  </class>

</hibernate-mapping>