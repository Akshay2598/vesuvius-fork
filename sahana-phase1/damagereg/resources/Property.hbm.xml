<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class name="org.damage.business.Property" table="property">
    <id name="propertyId" column="PropertyId" type="long" unsaved-value="null">
      <generator class="increment"/>
    </id>
    <property name="propertyTypeCode" column="PropertyTypeCode" type="string" length="100" />

    <property name="locationCode" column="LocationCode" type="string" length="30" />
    <property name="ownerName" column="OwnerName" type="string" length="50" />
    <property name="ownerPersonRef" column="OwnerPersonRef" type="string" length="30" />
    <property name="ownerAddress" column="OwnerAddress" type="string" length="100" />
    <property name="propertyAddress" column="PropertyAddress" type="string" length="100" />
    <property name="isInsured" column="IsInsured" type="boolean" />
    <property name="insuranceCompany" column="InsuranceCompany" type="string" length="50" />
    <property name="insurencePolicy" column="InsurencePolicy" type="string" length="50" />
    <property name="insurenceValue" column="InsurenceValue" type="double"/>
    <!--
    <one-to-one name="damageReport" class="org.damage.business.DamageReport" cascade="all" />
    -->
  </class>

</hibernate-mapping>